{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",

  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}",
    "push": true,
    "git.requireBranch": true
  },

  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },

  "npm": {
    "publish": true
  }
}
