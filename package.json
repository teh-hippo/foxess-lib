{
  "name": "foxess-lib",
  "displayName": "FoxESS Lib",
  "version": "1.0.0",
  "description": "Wrapper for the FoxESS OpenAPI specification",
  "license": "GPL-3.0",
  "keywords": [
    "foxess",
    "energizer",
    "solar",
    "openapi"
  ],
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git://github.com/teh-hippo/foxess-lib.git"
  },
  "bugs": {
    "url": "http://github.com/teh-hippo/foxess-lib/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/teh-hippo"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "pretest": "npm run build",
    "test": "jest tests",
    "lint": "eslint --max-warnings=0 src/**/*.ts",
    "lintAndFix": "eslint --fix --max-warnings=0 src/**/*.ts",
    "prepublishOnly": "npm run lint && npm test",
    "updateOpenAPI": "node -r ts-node/register tools/parser.ts && npx openapi-typescript ./dist/foxess-api.json -o ./src/foxess/lib/api/v1.d.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "openapi-typescript": "^6.7.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@stylistic/eslint-plugin": "^1.6.2",
    "ts-patch": "^3.1.2",
    "typescript-eslint": "^7.0.2"
  },
  "dependencies": {
    "node-html-parser": "^6.1.12",
    "openapi-fetch": "^0.9.1",
    "openapi-types": "^12.1.3",
    "ts-md5": "^1.3.1"
  }
}
